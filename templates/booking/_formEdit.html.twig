{{ form_start(bookingForm) }}
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="form-group mb-2">
                <div class="mb-2 text-start">
                    <span class="form-label">Salle nÂ° {{room.id}}</span>
                </div>
                <div class="mb-2">
                    <input name="room" class="form-control" type="text" value="{{room.name}}" disabled>
                </div>
            </div>
            <div class="mt-3 mb-2 text-start">
                <span class="form-label">E-mail Client</span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@</span>
                <input name="email" type="text" class="form-control" value={{app.user.email}} aria-label="Username" aria-describedby="basic-addon1" disabled>
            </div>
            {% if roomOptions %}
                <div class="mb-2 text-start">
                    <span class="form-label">Options de la salle</span>
                </div>
                {% set typeOpt = '' %}
                {% for opt in roomOptions %}
                    {% if opt.type.name != typeOpt %}
                        {{ opt.type.name }} :
                        {% set typeOpt = opt.type.name %}
                    {% endif %}
                        <li test-start ><span>{{opt.name}}</span> : {{ opt.description }}</li>
                {% endfor %}
            {% endif %}
        </div>
        <div class="col-4">
            <div class="text-start">
                {{ form_label(bookingForm.eventType) }}
            </div>
            <div class="mb-2">
                {{ form_widget(bookingForm.eventType) }}
            </div>
            <div class="mt-3 text-start">
                {{ form_label(bookingForm.startDate) }}
            </div>
            <div class="mb-2">
                {{ form_widget(bookingForm.startDate) }}
            </div>
            <div class="mt-3 text-start">
                {{ form_label(bookingForm.endDate) }}
            </div>
            <div class="mb-2">
                {{ form_widget(bookingForm.endDate) }}
            </div>
            <div class="mt-3 text-start">
                {{ form_label(bookingForm.comment) }}
            </div>
            <div class="mb-2">
                {{ form_widget(bookingForm.comment) }}
            </div>
            <div class="mt-3 text-start">
                <button class="btn btn-primary" type="submit">Modifier</button>
            </div>
        </div>
        <div class="col-4 d-flex align-items-center justify-content-center">
            <img src="/images/salle_{{room.id}}.jpg" width="90%" alt="">
        </div>
    </div>       
</div>
{{ form_end(bookingForm) }}
